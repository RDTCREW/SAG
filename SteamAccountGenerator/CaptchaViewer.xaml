<Window x:Class="SteamAccountGenerator.CaptchaViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Solve captcha" Height="170" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen" Topmost="True">
    <StackPanel>
        <Image x:Name="Image" />
        <Label Content="Enter text:" />
        <TextBox x:Name="Captcha" />
        <Button Content="Submit" Click="CaptchaSolutionClicked" />
    </StackPanel>
</Window>
